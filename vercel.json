{
    "version": 2,
    "builds": [
        {
            "source": "Client/**/*",
            "use": "@vercel/static"
        },
        {
            "source": "server.js",
            "use": "@vercel/node"
        },
        {
            "source": "vercel-postbuild",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "source": "/api/(.*)",
            "destination": "server.js"
        },
        {
            "source": "/(.*)",
            "destination": "Client/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}